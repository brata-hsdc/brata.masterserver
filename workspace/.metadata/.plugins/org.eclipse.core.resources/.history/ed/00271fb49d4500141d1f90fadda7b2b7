<?php
class School extends ModelEx {

  function __construct($oid=0,$cid=0) {
    parent::__construct('OID','CID','t_school'); 
    $this->rs['OID'] = $oid;
    $this->rs['CID'] = $cid;
    $this->rs['name'] = '';
    $this->rs['mascot'] = '';
    $this->rs['logo'] = 'todo';
    if ($oid && $cid)
    $this->retrieve($oid,$cid);
  }
