      $team->set("name",$names[$i]);
      $team->set("school",$school[$i]);
      if ($team->create() === false) echo "Create Team $i failed";
    }

    for ($s=1; $s<=$numStations; $s++)
    {
      for ($t=0; $t<count($names);$t++)
